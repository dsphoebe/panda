@font-face {
    font-family: "panda";
    src: url('../wawati-w5.ttf') format('truetype');
}

h1,
menu,
ul,
li
    margin: 0
    padding: 0
a
    color: #000
    text-decoration: none
    &:hover
        text-decoration: underline

#container
    font-family: "panda"
    font-size: 1.25rem
    width: 80%
    margin: 0 auto
    line-height: 1.5

#header
        margin: 2rem 0
        text-align: center
        menu 
            li
                line-height: 1
                display: inline-block
                padding: 0 1rem
                &:not(:last-child)
                    border-right: 2px solid #000
    #logo
        font-size: 3rem
        > *
            vertical-align: middle
        img
            width: 8rem
            margin: 0 1.5rem 2.5rem 0

    .article
        a
            color: #ff9ca3
        overflow: hidden
        .article-meta
            margin-bottom: 1.5rem
        width: 85%
        margin: 0 auto 2rem
        background: #eee
        border-radius: .5rem
        padding: 2rem
        h1[itemprop="name"]
            font-weight: normal
        .article-entry
            text-align: center
        .borned
            font-size: 2rem
        p
            line-height: 1.6
            width: 80%
            margin: .8rem auto
        .photos-1
            width: 35vw
            margin: auto
            img
                width: 100%
        img,
        video
            width: 20vw
            background: #ddd
            border: 3px dotted rgba(255,255,255,.7)
            margin: 1rem
        time
            display: block
            font-size: 1rem
            color: grey
        li, h1, h3
            text-align: left

#page-nav
    text-align:center
    .page-number
        display: inline-block
        width: 1rem
        height: 1rem
        padding: 1rem
        line-height: 1rem
        border-radius: 100%
        margin: 0 .25rem
        background: #000
        border: 1px solid #000
        color: #fff
    .current
        background: #fff
        color: #000

#footer
    text-align: center
    font-size: 1rem
    margin: 3rem 0 2rem

.archive-article-title
    font-size: 1.2rem
    &:before
        content: 'ã€‚'

.panda-banner
    margin: 2rem 2.5rem 4rem
    .img-wrapper,
    .img-wrapper-inner
        &:before,
        &:after
            position: absolute
            width: 4.5rem
            height: 1.5rem
            content: ''
            background: rgba(255,156,163,.45)
    .img-wrapper
        position: relative
        img
            width: 100%
        &:before
            transform: rotate(-45deg)
            top: -2%
            left: -7%
        &:after
            transform: rotate(45deg)
            bottom: -2%
            left: -7%
    .img-wrapper-inner
        &:before
            transform: rotate(45deg)
            top: -2%
            right: -7%
        &:after
            transform: rotate(-45deg)
            bottom: -2%
            right: -7%
    .img-wrapper,
    figcaption
        display: inline-block
        vertical-align: middle
    .img-wrapper
        width: 50%
    figcaption
        line-height: 1.5
        width: 25%
        margin: 10%

.v-1-index-title
    color: #ff9ca3
    font-weight: normal

.new-get
    ul
        padding: 1rem 1rem 3rem
    li
        list-style: none
        line-height: 1.5
    a
        color: #ff9ca3;

.guardians
    ul
        padding: 0 0 0 1rem
    li
        display: inline-block
        border: 1px solid #ddd
        box-shadow: 5px 5px 5px rgba(0,0,0,.2)
        width: 16%
        margin-right: 1rem
        text-align: center
        position: relative
        font-size: 1rem
        img
            width: 100%
            vertical-align: middle
        .name
            position: absolute
            white-space: nowrap
            text-align: right
            left: 0
            width: 100%

.learn
    ul
        padding: 1rem 1rem 3rem
    li
        list-style: none

.checkin
    ul
        display: none
    .imgs
        padding: 1rem 1rem 0
    img
        border: 1px solid #ddd
        position: relative
        z-index: 2
        &:last-child
            z-index: 1
            top: -4rem
            right: -30rem

li > ul
    margin-left: .7rem  
    > li
        margin-left: .7rem

.latest
    margin-bottom: 3rem

@media screen and (max-width: 640px)
    #container .article
        [class^=photo]
            width: 100%
        img
            width: 100%
            margin: 1rem 0
    .panda-banner
        margin: 1rem
        padding: 0
        .img-wrapper,
        .img-wrapper-inner
            &:before,
            &:after
                width: 3rem
                height: 1rem
        .img-wrapper
            width: 100%
        figcaption
            width: 100%
            margin: 0
            text-align: center
            li
                display: inline-block
    .checkin
        margin: 0 0 3rem
        .imgs
            display: none
        ul
            display: block
    .guardians
        li
            width: 40%
            