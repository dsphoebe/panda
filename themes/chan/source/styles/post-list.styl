.post-list {
  position: relative;
  padding-left: 0;
  border-left: 8px solid #ff7f87;
  .post-list-item {
    padding-left: 20px;
    margin-bottom: 40px;
  }
  .article-info {
    font-size: 13px;
  }
  .article-entry {
    font-size: 14px;
  }
  &:nth-child(2n) {
    border-left-color: #ef4123;
  }
  &:nth-child(3n) {
    border-left-color: #ffdc00;
  }
  &:nth-child(4n) {
    border-left-color: #48b63f;
  }
  &:nth-child(5n) {
    border-left-color: #48d2ff;
  }
  &:nth-child(6n) {
    border-left-color: #a96fd9;
  }
}

@media mq-mobile {
  .post-list {
    .post-list-item {
      padding-left: 8px;
    }
  }
}
